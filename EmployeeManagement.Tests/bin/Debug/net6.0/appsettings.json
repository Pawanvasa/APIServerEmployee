{

  "AllowedHosts": "*",

  "Serilog": {
    "MinimumLevel": "Information",
    "Override": {
      "Microsoft.AspNetCore": "Warning"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\logs\\Log_File_.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "StartsWith(SourceContext, 'Microsoft.')"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ]

  },
  "RedisCacheUrl": "127.0.0.1:6379",

  "NCacheSettings": {
    "CacheID": "NCacheTesting",
    "ServerIP": "192.168.2.197",
    "ServerPort": 8251
  },

  "ConnectionStrings": {
    "SecureConnection": "Data Source=localhost;Initial Catalog=EmployeeManagement;user id=sa;password=admin@123;Trusted_Connection=False;MultipleActiveResultSets=true",
    "BatchedConnectionString": "Data Source=localhost;Initial Catalog=batched-demo-demo-tenant;user id=sa;password=admin@123;Trusted_Connection=False;MultipleActiveResultSets=true"
  },
  "ParallelTasksCount": 20,

  "JwtSettings": {
    "SecretKey": "Xo2gQw36BTDLhOxEIDNj",
    "Audience": "https://localhost:7181/",
    "Issuer": "https://localhost:7181/",
    "ExpirationInMinutes": 30
  },
  "CircuitBreakerUrl": {
    "baseurl": "https://localhost:7074"
  },
  "rabbitMq": {
    "Uri": "amqp://guest:guest@localhost:5672",
    "user": "guest",
    "password": "guest"
  }
}
